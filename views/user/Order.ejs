                        </div>
                        <img src="https://t3.ftcdn.net/jpg/04/59/40/12/360_F_459401247_gbWn6xuQmiDv11uFYFZPwaQQOE6vA1dc.jpg" alt="..." width="65%">
                    <% } else { %>
                        <% finished.forEach(finOrder => { %>
                            <div class="order-card p-5 mb-4 has-text-left">
