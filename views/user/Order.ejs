                                        <p class="is-size-3 has-text-weight-bold">#<%= cancOrder.id %></p>
                                    </div>
                                    <div class="level-right">
                                        <p class="is-size-5 has-text-grey datetime"><%= cancOrder.createdAt %></p>
                                    </div>
                                </div>
